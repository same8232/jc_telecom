<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:backgroundTint="@color/bg1"
    tools:ignore="extra text"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="194dp">


        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="303dp"
            android:layout_height="240dp"
            android:layout_gravity="left"
            app:srcCompat="@drawable/patten" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="177dp">

        <ImageView
            android:id="@+id/imageVie2"
            android:layout_width="200dp"
            android:layout_height="157dp"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="130dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:src="@drawable/logo" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="Login"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold|normal" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="35dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="Welocome to Telecom Infra"
            android:textSize="15dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/human1" />

        <EditText
            android:id="@+id/user1"
            android:layout_width="340dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:inputType="textEmailAddress"
            android:hint="User_Id" />

    </LinearLayout>

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp">

        <ImageView
            android:layout_width="29dp"
            android:layout_height="23dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/unlock1" />

        <EditText
            android:id="@+id/psw"
            android:layout_width="341dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:inputType="numberPassword"
            android:hint="Password"
            android:drawableRight="@drawable/_351969_eye_key_look_password_security_icon" />


    </LinearLayout>

    <Button
        android:id="@+id/login"
        android:layout_width="392dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="30dp"
        android:backgroundTint="@color/btn1"
        android:text="Login"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/forgot1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="Forgot password?"
        android:textSize="15dp" />



</LinearLayout>