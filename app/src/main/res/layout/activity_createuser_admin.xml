<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".createuser_admin">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">


        <ImageButton
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:src="@drawable/menu"
            android:backgroundTint="@color/bg1"/>


        <TextView
            android:layout_width="341dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:text="Cteate User"
            android:textAlignment="center"
            android:textColor="@color/text"
            android:textSize="22dp" />

        <ImageButton
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:src="@drawable/userprofile"
            android:backgroundTint="@color/bg1"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="389dp"
        android:layout_height="41dp"
        android:layout_gravity="center"
        android:layout_marginTop="35dp">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="match_parent" />

        <Spinner
            android:id="@+id/position"
            android:layout_width="347dp"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="5dp"
            android:contextClickable="true"
            tools:ignore="ExtraText" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="389dp"
        android:layout_height="41dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:src="@drawable/human1" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/fname"
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="5dp"
            android:hint="First Name" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="389dp"
        android:layout_height="41dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:src="@drawable/human1" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/lname"
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="5dp"
            android:hint="Last Name" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="389dp"
        android:layout_height="41dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:src="@drawable/email" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/email"
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="5dp"
            android:hint="Email Id" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="389dp"
        android:layout_height="41dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:src="@drawable/call" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/pnum"
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="5dp"
            android:hint="Phone Number" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="389dp"
        android:layout_height="41dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="match_parent" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/date1"
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="5dp"

            android:hint="Birth Date" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="389dp"
        android:layout_height="41dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:src="@drawable/gender" />

        <Spinner
            android:id="@+id/gender"
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="5dp" />

    </LinearLayout>

    <Button
        android:id="@+id/save1"
        android:layout_width="402dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/btn"
        android:text="save"
        android:textSize="20dp"
        android:textStyle="bold|normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginTop="30dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:src="@drawable/grayhome" />

        <ImageButton
            android:id="@+id/bluehome"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/bg1"
            android:src="@drawable/bluehome" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="100dp"
            android:src="@drawable/grayadd" />

        <ImageButton
            android:id="@+id/blueadd"
            android:layout_width="41dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/bg1"
            android:src="@drawable/blueadd" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="70dp"
            android:src="@drawable/graypeople" />

        <ImageButton
            android:id="@+id/bluepeople"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/bg1"
            android:src="@drawable/bluepeople" />


    </LinearLayout>


</LinearLayout>