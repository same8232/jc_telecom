<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="extra text"
    tools:context=".vendors_details">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">


        <ImageButton
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:src="@drawable/menu"
            android:backgroundTint="@color/bg1"/>


        <TextView
            android:layout_width="341dp"
            android:layout_height="40dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="20dp"
            android:text="Fill Vendor Details"
            android:textAlignment="center"
            android:textColor="@color/text"
            android:textSize="22dp" />

        <ImageButton
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:src="@drawable/userprofile"
            android:backgroundTint="@color/bg1"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="390dp"
        android:layout_height="40dp"
        android:layout_marginTop="25dp">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="match_parent" />

        <EditText
            android:id="@+id/vname"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"
            android:hint="Vendor Name" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="390dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:src="@drawable/human1"/>

        <EditText
            android:id="@+id/oname"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"
            android:hint="Owner Name" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="390dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:src="@drawable/email"/>

        <EditText
            android:id="@+id/email"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"
            android:hint="Email Id" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="390dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:src="@drawable/call"/>

        <EditText
            android:id="@+id/pnum"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"
            android:hint="Phone Number" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="390dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="match_parent"/>

        <EditText
            android:id="@+id/address2"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"
            android:hint="Address" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="390dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="40dp" />

        <EditText
            android:id="@+id/gst"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"
            android:hint="GST No"
            android:drawableRight="@drawable/wrong"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="390dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="40dp" />

        <EditText
            android:id="@+id/gstimg"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"
            android:hint="GST_Certificate_Image_(PNG,JPEG)" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="390dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="match_parent" />

        <EditText
            android:id="@+id/doc1"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"
            android:hint="Document Number"

    </LinearLayout>

    <LinearLayout
        android:layout_width="390dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="match_parent" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/docimg"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"
            android:hint="Document Image" />


    </LinearLayout>

    <Button
        android:id="@+id/save4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="save"
        android:textSize="20dp"
        android:backgroundTint="@color/btn"
        android:textStyle="bold|normal" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_marginTop="30dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:src="@drawable/grayhome" />

        <ImageButton
            android:id="@+id/bluehome"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/bg1"
            android:src="@drawable/bluehome" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="90dp"
            android:src="@drawable/grayadd" />

        <ImageButton
            android:id="@+id/blueadd"
            android:layout_width="41dp"
            android:layout_height="wrap_content"
            android:src="@drawable/blueadd"
            android:backgroundTint="@color/bg1"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="70dp"
            android:src="@drawable/graypeople" />

        <ImageButton
            android:id="@+id/bluepeople"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bluepeople"
            android:backgroundTint="@color/bg1"/>





    </LinearLayout>



</LinearLayout>